<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/gray"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/textSleepTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/accent"
            android:text="Ложитесь спать в это время:"
            android:layout_marginVertical="10dp"
            />

        <LinearLayout
            android:id="@+id/firstLinear"
            android:layout_below="@id/textSleepTime"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/special_light_purple">
                <TextView
                    android:id="@+id/firstTimeSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/accent"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/special_light_purple"
                >
                <TextView
                    android:id="@+id/secondTimeSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/accent"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/special_light_purple"
                >
                <TextView
                    android:id="@+id/thirdTimeSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/accent"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/secondLinear"
            android:layout_below="@id/firstLinear"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/special_light_purple">
                <TextView
                    android:id="@+id/fourthTimeSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/accent"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/special_light_purple"
                >
                <TextView
                    android:id="@+id/fifthTimeSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/accent"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="15dp"
                android:backgroundTint="@color/special_light_purple"
                >
                <TextView
                    android:id="@+id/sixthTimeSleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/accent"
                    android:text="00:00"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>